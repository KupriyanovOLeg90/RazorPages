@page "{id}"
@model RazorPagestGeneral.Pages.Employes.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewData["ShowButtons"] = false;
}

<h1 class="text-center">Delete confirmation</h1>

<div class="alert alert-danger">

    <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
        <partial name="_DisplayEmployeeParshal" model="@Model.Employee" view-data="ViewData"/>
    </div>

    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-secondary text-center">
                <h4>Emploee ID: <span class="text-primary">@Model.Employee.Id</span> </h4><hr />
                <h4>Emploee Email: <span class="text-primary">@Model.Employee.Email</span> </h4><hr />
                <h4>Emploee Department: <span class="text-primary">@Model.Employee.Department</span> </h4><hr />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <h5>Are you shure want to delete employee - @Model.Employee.Name ?</h5>
            <form method="post">
                <button type="submit" class="btn btn-danger">Yes</button>
                <a asp-page="/Employes/Employes" class="btn btn-success">No</a>
            </form>
        </div>
    </div>
</div>
