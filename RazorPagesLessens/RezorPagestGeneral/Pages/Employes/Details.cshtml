@page "{id}"
@model RazorPagestGeneral.Pages.Employes.DetailsModel
@{
    ViewData["Title"] = "Детали";

    var photoPath = $"/images/{Model.Employee.PhotoPath ?? "noimage.png"}";
}


<div class="row m-3 justify-content-center">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">

            <div class="card-header cardHeaderStyle">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Employee ID: @Model.Employee.Id</h4><hr />
                        <h4 class="cardTextLeftFloating">Email: @Model.Employee.Email</h4><hr />
                        <h4 class="cardTextLeftFloating">Department: <span class="ext-da"> @Model.Employee.Department</span></h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right:1 solid rgba(0,0,0,.1)">
                            <img class="card-img-top imageThumbnail border border-primary"
                                 style="background-color: #dle7ff;" src="@photoPath" asp-append-version="true" />
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <div class="card-footer">
                        <a asp-page="/Employes/Employes" class="btn btn-success mr-1 buttonShadow">Back</a>
                        <a asp-page="/Employes/Edit" asp-route-Id="@Model.Employee.Id" class="btn btn-primary mr-1 buttonShadow">Edit</a>
                        <a asp-page="/Employes/Delete" asp-route-Id="@Model.Employee.Id" class="btn btn-danger mr-1 buttonShadow">Delete</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row m-3 justify-content-center">
    <div class="col col-lg-8">
        @await Component.InvokeAsync("HeadCount", new { dept = Model.Employee.Department })
        @*<vc:head-count dept ="@Model.Employee.Department"></vc:head-count>*@

    </div>
</div>