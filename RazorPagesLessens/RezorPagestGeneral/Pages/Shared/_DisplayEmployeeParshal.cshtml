
@model Employe

@{
    var photoPath = $"/images/{Model.PhotoPath ?? "noimage.png"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card-deck">
    <div class="card m-3 cardBoxShadow">
        <div class="card-header text-center cardHeaderStyle">
            <h3>@Model.Name</h3>
        </div>

        <div class="text-center cardBodyStyle">
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
        </div>

        @if (@showButtons)
        {
            <div class="card-footer text-center">
                <a asp-page="/Employes/Details" asp-route-Id="@Model.Id" class="btn btn-success mr-1 buttonShadow">View</a>
                <a asp-page="/Employes/Edit" asp-route-Id="@Model.Id" class="btn btn-primary mr-1 buttonShadow">Edit</a>
                <a asp-page="/Employes/Delete" asp-route-Id="@Model.Id" class="btn btn-danger mr-1 buttonShadow">Delete</a>
            </div>
        }
    </div>
</div>
